<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center justify-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class="text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover"
                    src="/images/uploads/<%= user.profileImage %>" alt="Loading Img">
            </div>
        </div>
        <h1 class="text-3xl font-semibold mt-5 text-white"><%= user.name %></h1>
        <h3 class="text-md">@<%= user.username %></h3>
        <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-sm">Edit</a>
        <a href="/add" class="px-7 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Create New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-400 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="Loading Img">
            </div>
            <a href="/show/posts" class="inline-block text-xl font-semibold mt-3">Your Uploaded Pins</a>
            <h5 class="text-sm font-medium opacity-80"><%= user.posts.length %> Pins</h5>
        </div>
    </div>
</div>


<script>
    document.getElementById('uploadicon').addEventListener('click', () => {
        document.getElementById('uploadform').children[0].click();
    });

    document.getElementById('uploadform').children[0].addEventListener('change', () => {
        document.getElementById('uploadform').submit();
    });
</script>

<% include ./partials/footer.ejs %>