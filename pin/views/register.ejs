<% include ./partials/header.ejs %>
    <div
        class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center ">
        <div class="w-[28vw] bg-white px-[30px] py-[50px] rounded-[30px]">
            <h1 class="text-2xl tracking-tight text-center font-semibold capitalize text-zinc-700 leading-none">Create New Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-md block mt-6 w-full px-3 py-1" type="text" name="username"
                    placeholder="username">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-1" type="text" name="name"
                    placeholder="Full Name">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-1" type="email" name="email"
                    placeholder="email">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-1" type="number" name="contact"
                    placeholder="contact">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-1" type="password" name="password"
                    placeholder="password">
                <a class="mt-2 text-zinc-500 font-semibold inline-block text-xs" href="#"></a>
                <input class="border-2 rounded-full block w-full px-3 py-2 bg-red-600 text-white" type="submit"
                    value="Create New Account">
                <p class="text-xs font-semibold text-zinc-700 mt-5 text-center w-[90%] mx-auto">By continuing, you agree
                    to
                    Pinterest's
                    Terms of Service
                    and acknowledge you've read our
                    Privacy Policy.
                    Notice at collection.</p>
            </form>
            <a href="/" class="inline-block mt-7 text-sm w-full text-center text-zinc-700 font-semibold">Login Existing Account</a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>